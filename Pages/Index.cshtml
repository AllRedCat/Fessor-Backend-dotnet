@page
@model FessorApi.Pages.IndexModel
@{
    ViewData["Title"] = "Página Inicial";
}

<style>
    .welcome-container {
        text-align: center;
        margin-top: 5rem;
    }
    .welcome-container h1 {
        color: #333;
    }
    .welcome-container p {
        color: #555;
        font-size: 1.2rem;
    }
    .logout-button {
        margin-top: 2rem;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 4px;
        background-color: #dc3545;
        color: white;
        font-size: 1rem;
        cursor: pointer;
    }
    .logout-button:hover {
        background-color: #c82333;
    }
</style>

<div class="welcome-container">
    <h1>Bem-vindo!</h1>
    
    @if (User.Identity is not null && User.Identity.IsAuthenticated)
    {
        <p>Você está logado como: @User.Identity.Name</p>
        
        <form method="post" asp-page-handler="Logout">
            <button type="submit" class="logout-button">Sair</button>
        </form>
    }
    else
    {
        <p>Por favor, <a asp-page="/Login">faça o login</a> para continuar.</p>
    }
</div> 